{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": false,
  "permission": {
    "read": {
      "{env:ADW_PROJECT_ROOT}/src/**": "allow",
      "{env:ADW_PROJECT_ROOT}/lib/**": "allow",
      "{env:ADW_PROJECT_ROOT}/tests/**": "allow",
      "{env:ADW_PROJECT_ROOT}/docs/**": "allow",
      "{env:ADW_PROJECT_ROOT}/.opencode/**": "allow"
    },
    "write": {
      "{env:ADW_PROJECT_ROOT}/src/**": "allow",
      "{env:ADW_PROJECT_ROOT}/lib/**": "allow",
      "{env:ADW_PROJECT_ROOT}/tests/**": "allow",
      "{env:ADW_PROJECT_ROOT}/docs/**": "allow",
      "{env:ADW_PROJECT_ROOT}/.opencode/**": "allow"
    },
    "edit": "allow",
    "webfetch": "ask",
    "external_directory": "deny",
    "bash": {
      "uv run *": "allow",
      "adw setup *": "allow",
      "adw health": "allow",
      "adw status": "allow",
      "adw workflow list": "allow",
      "adw workflow help *": "allow",
      "adw --help": "allow",
      "adw * --help": "allow",
      "pytest *": "allow",
      "ruff *": "allow",
      "mypy *": "allow",
      "python *": "allow",
      "python -m py_compile *": "allow",
      "git status": "allow",
      "git diff *": "allow",
      "git add *": "allow",
      "git commit *": "allow",
      "git checkout *": "allow",
      "git branch *": "allow",
      "git log *": "allow",
      "git stash *": "allow",
      "git worktree *": "allow",
      "git fetch *": "allow",
      "git pull *": "allow",
      "git merge *": "allow",
      "git rebase *": "allow",
      "git cherry-pick *": "allow",
      "git show *": "allow",
      "git rev-parse *": "allow",
      "git push -u origin *": "allow",
      "git push origin main": "deny",
      "git push main": "deny",
      "git push --force*": "deny",
      "git push -f*": "deny",
      "git reset --hard*": "deny",
      "git clean -fd*": "deny",
      "gh pr *": "allow",
      "gh issue *": "allow",
      "gh api *": "allow",
      "gh auth status": "allow",
      "gh repo *": "allow",
      "pwd": "allow",
      "ls": "allow",
      "ls *": "allow",
      "mkdir *": "allow",
      "touch *": "allow",
      "cp *": "allow",
      "mv *": "allow",
      "rm *.pyc": "allow",
      "rm *__pycache__*": "allow",
      "find *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "cat *": "allow",
      "wc *": "allow",
      "sort *": "allow",
      "uniq *": "allow",
      "diff *": "allow",
      "echo *": "allow",
      "date": "allow",
      "which *": "allow",
      "type *": "allow",
      "env *": "ask",
      "printenv *": "ask",
      "*": "deny"
    }
  },
  "instructions": [
    "./README.md",
    "./AGENTS.md"
  ],
  "share": "manual",
  "tui": {
    "scroll_speed": 1,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}
