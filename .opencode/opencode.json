{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "opencode/claude-sonnet-4-5",
  "small_model": "opencode/claude-3-5-haiku",
  "autoupdate": true,
  "permission": {
    "edit": "allow",
    "webfetch": "allow",
    "read": ["allow", "/home/kyle/Code/Agent/agents/**"],
    "write": ["allow", "/home/kyle/Code/Agent/agents/**"],
    "bash": {
      "ruff check *": "allow",
      "ruff format *": "allow",
      "flake8 *": "allow",
      "git checkout *": "allow",
      "git add *": "allow",
      "git commit *": "allow",
      "git push -u origin main": "deny",
      "git push origin main": "deny",
      "git push -u origin *": "allow",
      "git push --force": "deny",
      "git push -f": "deny",
      "gh pr create *": "allow",
      "gh pr view *": "allow",
      "gh issue create *": "allow",
      "python -m py_compile *": "allow",
      "python *": "allow",
      "pytest *": "allow",
      "rm -rf *": "deny",
      "terraform *": "deny",
      "npm publish": "deny",
      "docker run *": "deny",
      "docker build *": "deny",
      "kubectl *": "deny"
    }
  },
  "instructions": [
    "./README.md",
    "./AGENTS.md",
  ],
  "share": "manual",
  "tui": {
    "scroll_speed": 1,
    "scroll_acceleration": {
      "enabled": true
    }
  }
}