{
  "name": "adw-format",
  "version": "1.0.0",
  "description": "Format code, add docstrings, and run linting using the adw-format agent in isolated worktree",
  "workflow_type": "custom",
  "steps": [
    {
      "type": "agent",
      "name": "Format Code and Add Docstrings",
      "agent": "adw-format",
      "prompt": "$ARGUMENTS --adw-id ${adw_id}",
      "model": "light",
      "timeout": 1800,
      "retry": {
        "max_retries": 1,
        "initial_delay": 10.0,
        "backoff": 2.0
      }
    }
  ]
}
