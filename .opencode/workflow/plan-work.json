{
  "name": "plan-work",
  "version": "1.0.0",
  "description": "Generate implementation plans using the plan-work agent with dynamic prompts",
  "workflow_type": "custom",
  "steps": [
    {
      "type": "agent",
      "name": "Generate Implementation Plan",
      "agent": "plan-work",
      "prompt": "$ARGUMENTS --adw-id ${adw_id}",
      "model": "base",
      "timeout": 1200,
      "retry": {
        "max_retries": 2,
        "initial_delay": 5.0,
        "backoff": 2.0
      }
    }
  ]
}
